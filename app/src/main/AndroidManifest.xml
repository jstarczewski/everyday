<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clakestudio.pc.everyday">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".showdays.ShowDaysActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".adddays.AddDayActivity"
            android:label="@string/title_activity_add_day"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".utils.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".info.InfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".setgoal.SetGoalActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".settings.SettingsActivity"></activity>
    </application>

</manifest>